{
  "parserOptions": {
    "ecmaVersion": 7
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["warn", 2],
    "no-unused-vars": ["warn"],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "new-cap": 0,
    "arrow-body-style": ["error", "as-needed"],
    "func-names": 0,
    "max-len": ["error", 120, 4],
    "semi": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "semi-spacing": ["error", { "before": false, "after": true }],
    "semi-style": ["error", "last"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "block-spacing": "error",
    "computed-property-spacing": ["error", "never"],
    "func-call-spacing": ["error", "never"],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true, "mode": "strict" }],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "no-mixed-spaces-and-tabs": "error",
    "no-trailing-spaces": "error",
    "no-multi-spaces": ["error", { "exceptions": { "Property": false } }],
    "space-before-blocks": "error",
    "space-before-function-paren": "error",
    "space-in-parens": ["error", "never"],
    "space-infix-ops": "error",
    "space-unary-ops": "error",
    "arrow-spacing": "error",
    "generator-star-spacing": ["error", { "before": true, "after": false }],
    "rest-spread-spacing": ["error", "never"],
    "template-curly-spacing": ["error", "never"],
    "yield-star-spacing": ["error", "after"],
    "no-whitespace-before-property": "error",
    "object-curly-spacing": ["error", "always"],
    "spaced-comment": ["error", "always"],
    "switch-colon-spacing": "error",
    "template-tag-spacing": "error",
    "no-unneeded-ternary": "error",
    "no-nested-ternary": "error",
    "comma-style": ["error", "last"],
    "comma-dangle": ["error", "always-multiline", { "functions": "never" }],
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
    "max-lines-per-function": ["warn", {"max": 50, "skipBlankLines": true, "IIFEs": true}],
    "max-depth": ["error", 4],
    "max-nested-callbacks": ["error", 3],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1, "maxBOF": 1 }],
    "object-curly-newline": ["error", { "minProperties": 2, "multiline": true }],
    "lines-between-class-members": ["error", "always"],
    "implicit-arrow-linebreak": ["error", "beside"],
    "function-paren-newline": ["error", { "minItems": 4 }],
    "array-element-newline": ["error", { "minItems": 2 }],
    "dot-location": ["error", "property"],
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": ["const", "let", "var", "directive"], "next": "*"},
      { "blankLine": "always", "prev": "*", "next": "return" },
      { "blankLine": "any",    "prev": ["const", "let", "var", "directive"], "next": ["const", "let", "var", "directive"]}
    ],
    "operator-linebreak": ["error", "after"],
    "one-var-declaration-per-line": ["error", "always"],
    "object-property-newline": "error",
    "getter-return": "error",
    "no-template-curly-in-string": "error",
    "default-case": "error",
    "max-classes-per-file": "error",
    "curly": "error",
    "eqeqeq": "error",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-console": 0,
    "no-extra-parens": "error",
    "array-callback-return": "error",
    "guard-for-in": "error",
    "no-alert": "error",
    "no-caller": "error",
    "no-div-regex": "error",
    "complexity": ["warn", 2],
    "consistent-return": "warn",
    "no-process-exit": "error",
    "no-process-env": "error",
    "no-path-concat": "error",
    "no-new-require": "error",
    "handle-callback-err": "error",
    "global-require": "error",
    "no-undefined": "error",
    "no-undef-init": "error",
    "no-shadow": "warn",
    "no-label-var": "error",
    "yoda": "error",
    "require-unicode-regexp": "warn",
    "require-await": "error",
    "radix": "error",
    "prefer-named-capture-group": "error",
    "no-void": "error",
    "no-useless-return": "error",
    "no-useless-concat": "error",
    "no-useless-call": "error",
    "no-unmodified-loop-condition": "error",
    "no-throw-literal": "error",
    "no-sequences": "error",
    "no-self-compare": "error",
    "no-script-url": "error",
    "no-return-assign": "error",
    "no-proto": "error",
    "no-param-reassign": "warn",
    "no-octal-escape": "error",
    "no-new-wrappers": "error",
    "no-new-func": "error",
    "no-new": "error",
    "no-multi-str": "error",
    "no-magic-numbers": "warn",
    "no-loop-func": "error",
    "no-lone-blocks": "error",
    "no-labels": "error",
    "no-iterator": "error",
    "no-invalid-this": "error",
    "no-implied-eval": "error",
    "no-implicit-globals": "error",
    "no-implicit-coercion": "error",
    "no-floating-decimal": "error",
    "no-eval": "error",
    "no-eq-null": "error",
    "no-extend-native": "error",
    "no-else-return": "error",
    "no-extra-bind": "error",
    "no-empty-function": "warn",
    "array-bracket-newline": ["error", { "multiline": true, "minItems": 2 }],
    "camelcase": "warn",
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "consistent-this": ["error", "vm"],
    "id-blacklist": ["warn", "data", "callback", "arr"],
    "max-statements": ["warn", 10],
    "func-name-matching": "error",
    "max-statements-per-line": ["error", { "max": 2 }],
    "new-parens": "error",
    "no-bitwise": "error",
    "no-continue": "error",
    "no-inline-comments": "error",
    "no-lonely-if": "error",
    "no-multi-assign": "error",
    "no-new-object": "error",
    "one-var": ["warn", "always"],
    "nonblock-statement-body-position": ["error", "below"],
    "no-restricted-syntax": ["error", "WithStatement"],
    "no-negated-condition": "error",
    "padded-blocks": ["error", "never"],
    "prefer-object-spread": "error",
    "unicode-bom": "error",
    "quote-props": ["error", "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "no-duplicate-imports": "error",
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "no-useless-rename": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "no-var": "error",
    "prefer-const": "warn",
    "prefer-destructuring": ["warn", { "VariableDeclarator": { "object": true } }],
    "wrap-regex": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    "symbol-description": "error",
    "prefer-template": "error",
    "prefer-numeric-literals": "error"
  },
  "globals": {
    "angular": true,
    "console": true,
    "toast": true,
    "tizen": true,
    "io": true,
    "document": true,
    "cordova": true,
    "require": true,
    "Promise": true,
    "$": true,
    "device": true,
    "navigator": true,
    "location": true,
    "localStorage": true,
    "html2canvas": true,
    "API_URL": true,
    "DEVICE_ID": true,
    "module": true,
    "__dirname": true,
    "process": true,
    "APP_VERSION": true,
    "FileReader": true,
    "debugger": true,
    "window": true,
    "JSON": true,
    "X2JS": true,
    "fetch": true,
    "describe": true,
    "it": true,
    "setTimeout": true
  }
}
